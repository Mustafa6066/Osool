# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ═══════════════════════════════════════════════════════════════
# AI API Keys
# ═══════════════════════════════════════════════════════════════

# OpenAI API Key (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Gemini API Key (optional fallback)
GEMINI_API_KEY=your_gemini_api_key_here

# ═══════════════════════════════════════════════════════════════
# Blockchain Configuration
# ═══════════════════════════════════════════════════════════════

# Wallet private key (NEVER commit the actual key!)
PRIVATE_KEY=your_wallet_private_key_here

# RPC URLs
SEPOLIA_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
GOERLI_URL=https://eth-goerli.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
BSC_TESTNET_URL=https://data-seed-prebsc-1-s1.binance.org:8545
BSC_URL=https://bsc-dataseed.binance.org/

# Block Explorer API Keys (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
BSCSCAN_API_KEY=your_bscscan_api_key_here

# Gas reporting
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
REPORT_GAS=false

# ═══════════════════════════════════════════════════════════════
# Deployed Contract Addresses (update after deployment)
# ═══════════════════════════════════════════════════════════════

NEXT_PUBLIC_SUBSCRIPTION_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_ESCROW_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_NFT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_PLATFORM_ADDRESS=0x0000000000000000000000000000000000000000

# ═══════════════════════════════════════════════════════════════
# Application Configuration
# ═══════════════════════════════════════════════════════════════

NODE_ENV=development
API_BASE_URL=http://localhost:8000

# ═══════════════════════════════════════════════════════════════
# Production Configuration (Osool Platform)
# ═══════════════════════════════════════════════════════════════

# Polygon Mainnet (Production)
POLYGON_RPC_URL_PROD=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
CHAIN_ID_PROD=137
ADMIN_WALLET_ADDRESS=0xYOUR_ADMIN_WALLET_ADDRESS
PRIVATE_KEY_PROD=your_production_private_key_from_kms

# Contract Addresses (Production - Update after deployment)
OSOOL_REGISTRY_ADDRESS=0x0000000000000000000000000000000000000000
ELITE_PLATFORM_ADDRESS=0x0000000000000000000000000000000000000000
ELITE_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
ELITE_NFT_ADDRESS=0x0000000000000000000000000000000000000000

# MLOps Configuration
MLOPS_INFERENCE_URL=http://localhost:8080/v1/models/xgboost:predict

# Payment Gateway (Paymob)
PAYMOB_API_KEY=your_paymob_api_key
PAYMOB_INTEGRATION_ID=your_paymob_integration_id
PAYMOB_WEBHOOK_SECRET=your_paymob_webhook_secret
PAYMOB_HMAC_SECRET=your_paymob_hmac_secret

# ThirdWeb (Frontend)
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your_thirdweb_client_id
NEXT_PUBLIC_API_URL=https://api.osool.com

# ═══════════════════════════════════════════════════════════════
# CRITICAL BACKEND VARIABLES (Added for Production Readiness)
# ═══════════════════════════════════════════════════════════════

# Database connection string (PostgreSQL with pgvector)
DATABASE_URL=postgresql://user:password@localhost:5432/osool

# JWT secret for authentication tokens (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_here

# Admin API key for protected endpoints (generate with: openssl rand -hex 32)
ADMIN_API_KEY=your_admin_api_key_here

# Environment (development, staging, production)
ENVIRONMENT=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# ═══════════════════════════════════════════════════════════════
# COMMUNICATION SERVICES (Required for auth features)
# ═══════════════════════════════════════════════════════════════

# Twilio for phone OTP verification
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid for email verification and password reset
SENDGRID_API_KEY=SG....
FROM_EMAIL=noreply@osool.com

# ═══════════════════════════════════════════════════════════════
# AUTHENTICATION PROVIDERS
# ═══════════════════════════════════════════════════════════════

# Google OAuth for social login
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret

# ═══════════════════════════════════════════════════════════════
# MONITORING & OBSERVABILITY
# ═══════════════════════════════════════════════════════════════

# Sentry for error tracking
SENTRY_DSN=https://...@sentry.io/...

# Redis for caching and session management
REDIS_URL=redis://localhost:6379

# ═══════════════════════════════════════════════════════════════
# LIQUIDITY MARKETPLACE (AMM) CONTRACT ADDRESSES
# ═══════════════════════════════════════════════════════════════

