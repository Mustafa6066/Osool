# ===================================================================
# Osool Development Environment Configuration
# ===================================================================
# Copy this file to .env and fill in your actual values
# Run: python generate_secrets.py to generate secure secrets
# ===================================================================

# ===================================================================
# ENVIRONMENT
# ===================================================================
ENVIRONMENT=development

# ===================================================================
# DATABASE (REQUIRED)
# ===================================================================
# For local development with PostgreSQL:
DATABASE_URL=postgresql://osool_user:your_secure_password@localhost:5432/osool_dev

# Alternative: SQLite for quick local testing
# DATABASE_URL=sqlite:///./osool_dev.db

# ===================================================================
# SECURITY KEYS (REQUIRED)
# ===================================================================
# Generate with: python generate_secrets.py
JWT_SECRET_KEY=your_jwt_secret_here_run_generate_secrets_py
ADMIN_API_KEY=your_admin_api_key_here

# Wallet encryption (CRITICAL - backup this key!)
WALLET_ENCRYPTION_KEY=your_wallet_encryption_key_here

# ===================================================================
# AI APIS (REQUIRED FOR PHASE 1)
# ===================================================================
# OpenAI API Key (for embeddings and fallback)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_key_here

# Claude API Key (AMR Brain - Advanced Reasoning)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here

# Claude Model Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.3

# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
FRONTEND_URL=http://localhost:3000
PORT=8000
LOG_LEVEL=debug

# ===================================================================
# OPTIONAL: REDIS (for caching and rate limiting)
# ===================================================================
REDIS_URL=redis://localhost:6379/0

# ===================================================================
# OPTIONAL: MONITORING
# ===================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ===================================================================
# OPTIONAL: BLOCKCHAIN (Phase 2+)
# ===================================================================
# Enable blockchain features (false for Phase 1 dev)
ENABLE_BLOCKCHAIN=false

# When enabled, configure these:
# PRIVATE_KEY=your_wallet_private_key
# ALCHEMY_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/your_key
# OSOOL_REGISTRY_ADDRESS=0x...
# ELITE_PLATFORM_ADDRESS=0x...

# ===================================================================
# OPTIONAL: PAYMENTS (Phase 2+)
# ===================================================================
# Enable payment processing (false for Phase 1 dev)
ENABLE_PAYMENTS=false

# When enabled, configure these:
# PAYMOB_API_KEY=your_paymob_api_key
# PAYMOB_INTEGRATION_ID=your_integration_id

# ===================================================================
# OPTIONAL: COMMUNICATION (Phase 2+)
# ===================================================================
# Enable SMS/Email features (false for Phase 1 dev)
ENABLE_SMS=false
ENABLE_EMAIL=false

# When enabled, configure these:
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
# TWILIO_PHONE_NUMBER=+1234567890
# SENDGRID_API_KEY=your_sendgrid_key
# FROM_EMAIL=noreply@osool.com

# ===================================================================
# OPTIONAL: OAUTH (Phase 2+)
# ===================================================================
# GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
